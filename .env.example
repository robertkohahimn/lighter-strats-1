# Lighter Trading Strategy Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_BASE_URL=https://mainnet.zklighter.elliot.ai
API_VERSION=v1
API_TIMEOUT=30.0

# Strategy Mode
DRY_RUN=false
EMERGENCY_SHUTDOWN_ENABLED=true

# Trading Parameters (Override via CLI recommended)
# MARKET=SOL
# BUY_PRICE=100.50
# SELL_PRICE=105.00
# ORDER_SIZE=10.0
# MIN_USDC_BALANCE=500.0

# Monitoring Configuration
ORDER_CHECK_INTERVAL=5.0
LIQUIDATION_CHECK_INTERVAL=2.0
BALANCE_CHECK_INTERVAL=30.0
ENABLE_WEBSOCKET=true
WEBSOCKET_RECONNECT_DELAY=5.0

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
MAX_RETRY_DELAY=30.0
EXPONENTIAL_BACKOFF=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/lighter_strategy.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# Wallet Configuration (Can be set via CLI or here)
# Format: address_a,address_b,api_key_a,api_key_b;address_a2,address_b2,api_key_a2,api_key_b2
# WALLET_PAIRS=

# Example wallet pair configuration:
# WALLET_1_ADDRESS_A=0x...
# WALLET_1_ADDRESS_B=0x...
# WALLET_1_API_KEY_A=your_api_key_here
# WALLET_1_API_KEY_B=your_api_key_here

# WALLET_2_ADDRESS_A=0x...
# WALLET_2_ADDRESS_B=0x...
# WALLET_2_API_KEY_A=your_api_key_here
# WALLET_2_API_KEY_B=your_api_key_here